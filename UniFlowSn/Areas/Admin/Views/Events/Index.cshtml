@model IEnumerable<UniFlowSn.Models.Db.Event>

@{
    ViewData["Title"] = "Eventos";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-calendar-event-fill me-2"></i> Eventos</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill me-2"></i> Adicionar Evento</a>
    </p>
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th><i class="bi bi-bookmark-fill me-2"></i> @Html.DisplayNameFor(model => model.Title)</th>
                    <th><i class="bi bi-chat-left-text-fill me-2"></i> @Html.DisplayNameFor(model => model.Description)</th>
                    <th><i class="bi bi-image-fill me-2"></i> @Html.DisplayNameFor(model => model.ImageName)</th>
                    <th><i class="bi bi-ticket-fill me-2"></i> @Html.DisplayNameFor(model => model.Qty)</th>
                    <th><i class="bi bi-calendar-check-fill me-2"></i> @Html.DisplayNameFor(model => model.DtStart)</th>
                    <th><i class="bi bi-calendar-x-fill me-2"></i> @Html.DisplayNameFor(model => model.DtEnd)</th>
                    <th><i class="bi bi-geo-alt-fill me-2"></i> @Html.DisplayNameFor(model => model.Place)</th>
                    <th><i class="bi bi-tag-fill me-2"></i> @Html.DisplayNameFor(model => model.Type)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td><img src="/images/banners/@item.ImageName" alt="@item.Title" style="max-width: 100px; height: auto;"></td>
                        <td>@Html.DisplayFor(modelItem => item.Qty)</td>
                        <td>@item.DtStart?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.DtEnd?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.Place.Place)</td>
                        <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.Type.Type)</span></td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info my-2"><i class="bi bi-eye-fill"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger my-2"><i class="bi bi-trash-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>