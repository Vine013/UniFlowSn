@model IEnumerable<UniFlowSn.Models.Db.EventPlace>

@{
    ViewData["Title"] = "Locais de Eventos";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-geo-alt-fill me-2"></i> Locais de Eventos</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill me-2"></i> Adicionar Local</a>
    </p>
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th><i class="bi bi-signpost-fill me-2"></i> @Html.DisplayNameFor(model => model.Place)</th>
                    <th><i class="bi bi-house-fill me-2"></i> @Html.DisplayNameFor(model => model.Address)</th>
                    <th><i class="bi bi-building me-2"></i> @Html.DisplayNameFor(model => model.City)</th>
                    <th><i class="bi bi-map-fill me-2"></i> @Html.DisplayNameFor(model => model.State)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Place)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                        <td>@Html.DisplayFor(modelItem => item.State)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1"><i class="bi bi-eye-fill"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1"><i class="bi bi-trash-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>