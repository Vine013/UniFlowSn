@model UniFlowSn.Models.Db.User

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-pencil-square me-2"></i> Editar Usuário</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3 form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="FirstName" class="form-control" placeholder="Nome" />
                            <label asp-for="FirstName" class="form-label"><i class="bi bi-person-fill me-2"></i> Nome</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="LastName" class="form-control" placeholder="Sobrenome" />
                            <label asp-for="LastName" class="form-label"><i class="bi bi-person-fill me-2"></i> Sobrenome</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Phone" class="form-control" placeholder="Telefone" />
                            <label asp-for="Phone" class="form-label"><i class="bi bi-telephone-fill me-2"></i> Telefone</label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Endereço" />
                            <label asp-for="Address" class="form-label"><i class="bi bi-house-fill me-2"></i> Endereço</label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="IsAdmin" />
                            <label class="form-check-label" asp-for="IsAdmin"><i class="bi bi-shield-fill me-2"></i> Administrador</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="RegisterDate" class="form-control" placeholder="Data de Registro" />
                            <label asp-for="RegisterDate" class="form-label"><i class="bi bi-calendar-date-fill me-2"></i> Data de Registro</label>
                            <span asp-validation-for="RegisterDate" class="text-danger"></span>
                        </div>
                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save-fill me-2"></i> Salvar</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle-fill me-2"></i> Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}