@model IEnumerable<UniFlowSn.Models.Db.Comment>

@{
    ViewData["Title"] = "Comentários";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-chat-left-fill me-2"></i> Comentários</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill me-2"></i> Adicionar Comentário</a>
    </p>
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th><i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.Name)</th>
                    <th><i class="bi bi-envelope-fill me-2"></i> @Html.DisplayNameFor(model => model.Email)</th>
                    <th><i class="bi bi-text-paragraph me-2"></i> @Html.DisplayNameFor(model => model.CommentText)</th>
                    <th><i class="bi bi-calendar-event-fill me-2"></i> @Html.DisplayNameFor(model => model.CreateDate)</th>
                    <th><i class="bi bi-bookmark-fill me-2"></i> @Html.DisplayNameFor(model => model.Event)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.CommentText)</td>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@Html.DisplayFor(modelItem => item.Event.Title)</td>
                        <td class="text-center d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary my-2"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info my-2"><i class="bi bi-eye-fill"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger my-2"><i class="bi bi-trash-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>