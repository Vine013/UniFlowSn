@model UniFlowSn.Models.Db.Comment

@{
    ViewData["Title"] = "Excluir Comentário";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-trash-fill text-danger me-2"></i> Excluir Comentário</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4">
                    <h4 class="card-title mb-4 text-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i> Tem certeza de que deseja excluir este comentário?</h4>
                    <dl class="row">
                        <dt class="col-sm-3"><i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-3"><i class="bi bi-envelope-fill me-2"></i> @Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        <dt class="col-sm-3"><i class="bi bi-text-paragraph me-2"></i> @Html.DisplayNameFor(model => model.CommentText)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CommentText)</dd>
                        <dt class="col-sm-3"><i class="bi bi-calendar-event-fill me-2"></i> @Html.DisplayNameFor(model => model.CreateDate)</dt>
                        <dd class="col-sm-9">@Model.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                        <dt class="col-sm-3"><i class="bi bi-bookmark-fill me-2"></i> @Html.DisplayNameFor(model => model.Event)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Title)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-2"></i> Excluir Comentário</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Voltar para a Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>