@model UniFlowSn.Models.Db.EventType

@{
    ViewData["Title"] = "Editar Tipo de Evento";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-pencil-square me-2"></i> Editar Tipo de Evento</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3 form-floating">
                            <input asp-for="Type" class="form-control" placeholder="Tipo de Evento" required />
                            <label asp-for="Type" class="form-label"><i class="bi bi-tag-fill me-2"></i> Tipo de Evento</label>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save-fill me-2"></i> Salvar</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle-fill me-2"></i> Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}