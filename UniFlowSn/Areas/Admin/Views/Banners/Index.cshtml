@model IEnumerable<UniFlowSn.Models.Db.Banner>

@{
    ViewData["Title"] = "Banners";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-image-fill me-2"></i> Banners</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill me-2"></i> Adicionar Banner</a>
    </p>
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th><i class="bi bi-type me-2"></i> @Html.DisplayNameFor(model => model.Title)</th>
                    <th><i class="bi bi-text-indent-left me-2"></i> @Html.DisplayNameFor(model => model.SubTitle)</th>
                    <th><i class="bi bi-image me-2"></i> @Html.DisplayNameFor(model => model.ImageName)</th>
                    <th><i class="bi bi-sort-numeric-down me-2"></i> @Html.DisplayNameFor(model => model.Priority)</th>
                    <th><i class="bi bi-link-45deg me-2"></i> @Html.DisplayNameFor(model => model.Link)</th>
                    <th><i class="bi bi-layout-fill me-2"></i> @Html.DisplayNameFor(model => model.Position)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.SubTitle)</td>
                        <td><img src="/images/banners/@item.ImageName" alt="@item.Title" class="img-thumbnail" style="max-width: 100px; height: auto;"></td>
                        <td>@Html.DisplayFor(modelItem => item.Priority)</td>
                        <td><a href="@item.Link" target="_blank" rel="noopenernoreferrer">@Html.DisplayFor(modelItem => item.Link)</a></td>
                        <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.Position)</span></td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info my-2"><i class="bi bi-eye-fill"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger my-2"><i class="bi bi-trash-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>