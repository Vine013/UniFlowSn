@model UniFlowSn.Models.Db.Order

@{
    ViewData["Title"] = "Detalhes da Inscrição";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-eye-fill me-2"></i> Detalhes da Inscrição</h1>

    <div class="card shadow-sm rounded">
        <div class="card-body p-4">
            <h4 class="card-title mb-4">Informações da Inscrição</h4>
            <dl class="row">
                <dt class="col-sm-3"><i class="bi bi-calendar-plus-fill me-2"></i> @Html.DisplayNameFor(model => model.CreateDate)</dt>
                <dd class="col-sm-9">@Model.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                <dt class="col-sm-3"><i class="bi bi-tag-fill me-2"></i> @Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@Html.DisplayFor(model => model.Status)</span></dd>

                <dt class="col-sm-3"><i class="bi bi-bookmark-fill me-2"></i> @Html.DisplayNameFor(model => model.Event.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Title)</dd>

                <dt class="col-sm-3"><i class="bi bi-calendar-event-fill me-2"></i> @Html.DisplayNameFor(model => model.Event.DtStart)</dt>
                <dd class="col-sm-9">@Model.Event.DtStart?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3"><i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.User)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)</dd>
            </dl>
        </div>
        <div class="card-footer text-center py-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="bi bi-pencil-fill me-2"></i> Editar</a>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Voltar para a Lista</a>
        </div>
    </div>
</div>