@model IEnumerable<UniFlowSn.Models.Db.Order>

@{
    ViewData["Title"] = "Inscrições";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-card-checklist-fill me-2"></i> Inscrições</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill me-2"></i> Nova Inscrição</a>
    </p>
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th><i class="bi bi-calendar-plus-fill me-2"></i> @Html.DisplayNameFor(model => model.CreateDate)</th>
                    <th><i class="bi bi-tag-fill me-2"></i> @Html.DisplayNameFor(model => model.Status)</th>
                    <th><i class="bi bi-bookmark-fill me-2"></i> @Html.DisplayNameFor(model => model.Event.Title)</th>
                    <th><i class="bi bi-calendar-event-fill me-2"></i> @Html.DisplayNameFor(model => model.Event.DtStart)</th>
                    <th><i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.User)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status)</span></td>
                        <td>@Html.DisplayFor(modelItem => item.Event.Title)</td>
                        <td>@item.Event.DtStart?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1"><i class="bi bi-eye-fill"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1"><i class="bi bi-trash-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>