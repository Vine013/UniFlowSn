@model UniFlowSn.Models.Db.Order

@{
    ViewData["Title"] = "Nova Inscrição";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-plus-circle-fill me-2"></i> Nova Inscrição</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3 form-floating">
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId" required>
                                <option value="">Selecione o Usuário</option>
                            </select>
                            <label asp-for="UserId" class="form-label"><i class="bi bi-person-fill me-2"></i> Usuário</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <select asp-for="EventId" class="form-select" asp-items="ViewBag.EventId" required>
                                <option value="">Selecione o Evento</option>
                            </select>
                            <label asp-for="EventId" class="form-label"><i class="bi bi-bookmark-fill me-2"></i> Evento</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="CreateDate" class="form-control" type="datetime-local" placeholder="Data da Inscrição" required />
                            <label asp-for="CreateDate" class="form-label"><i class="bi bi-calendar-plus-fill me-2"></i> Data da Inscrição</label>
                            <span asp-validation-for="CreateDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Status" class="form-control" placeholder="Status" required />
                            <label asp-for="Status" class="form-label"><i class="bi bi-tag-fill me-2"></i> Status</label>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill me-2"></i> Criar Inscrição</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle-fill me-2"></i> Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>