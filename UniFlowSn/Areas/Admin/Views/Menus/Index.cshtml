@model IEnumerable<UniFlowSn.Models.Db.Menu>

@{
    ViewData["Title"] = "Menus";
}

<div class="container mt-5">
    <h1 class="mb-4"><i class="bi bi-list-ul me-2"></i> Menus</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill me-2"></i> Adicionar Menu</a>
    </p>
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-striped table-bordered mb-0">
            <thead class="thead-dark">
                <tr>
                    <th><i class="bi bi-text-left me-2"></i> @Html.DisplayNameFor(model => model.MenuTitle)</th>
                    <th><i class="bi bi-link-45deg me-2"></i> @Html.DisplayNameFor(model => model.Link)</th>
                    <th><i class="bi bi-tag-fill me-2"></i> @Html.DisplayNameFor(model => model.Type)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MenuTitle)</td>
                        <td><a href="@item.Link" target="_blank" rel="noopener noreferrer">@Html.DisplayFor(modelItem => item.Link)</a></td>
                        <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.Type)</span></td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1"><i class="bi bi-eye-fill"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1"><i class="bi bi-trash-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>