<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin UniFlow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/test_mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column h-100">
    <header class="bg-light shadow-sm fixed-top">
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow py-3">
            <div class="container-fluid">
                <a class="navbar-brand text-primary fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index" style="color: #0FC2C0 !important;">
                    <i class="bi bi-speedometer2 me-2"></i> Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill me-2"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Menus" asp-action="Index"><i class="bi bi-list-ul me-2"></i>Menus</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Banners" asp-action="Index"><i class="bi bi-image-fill me-2"></i>Banners</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Events" asp-action="Index"><i class="bi bi-calendar-event-fill me-2"></i>Eventos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="EventPlaces" asp-action="Index"><i class="bi bi-geo-alt-fill me-2"></i>Locais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="EventTypes" asp-action="Index"><i class="bi bi-tags-fill me-2"></i>Tipos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Comments" asp-action="Index"><i class="bi bi-chat-left-fill me-2"></i>Comentários</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index"><i class="bi bi-people-fill me-2"></i>Usuários</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Orders" asp-action="Index"><i class="bi bi-card-checklist me-2"></i>Inscrições</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Settings" asp-action="Edit"><i class="bi bi-gear-fill me-2"></i>Configurações</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-bold" style="color:#0FC2C0;" href="/"><i class="bi bi-house-door-fill me-2" style="color:#0FC2C0;"></i>UniFlow</a>
                        </li>
                        <li class="nav-item" >
                            <a class="nav-link text-danger " asp-area="" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1 py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light py-4 mt-auto border-top shadow-sm text-center text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Admin UniFlow - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>