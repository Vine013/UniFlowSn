@model UniFlowSn.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Redefinir Senha";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-center p-4" style="background-color: #0FC2C0 !important;">
                    <h3 class="text-white"><i class="bi bi-key-fill me-2"></i> Redefinir Senha</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ResetPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Email" />
                        <div class="mb-3 form-floating">
                            <input asp-for="RecoveryCode" class="form-control" placeholder="Código de Recuperação" />
                            <label asp-for="RecoveryCode" class="form-label"><i class="bi bi-shield-lock-fill me-2"></i> Código de Recuperação</label>
                            <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Nova Senha" />
                            <label asp-for="NewPassword" class="form-label"><i class="bi bi-asterisk me-2"></i> Nova Senha</label>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" style="background-color: #0FC2C0 !important; border-color: #0FC2C0 !important;">
                                <i class="bi bi-arrow-clockwise me-2"></i> Redefinir Senha
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-controller="Account" asp-action="Login">Voltar para o Login</a></div>
                </div>
            </div>
        </div>
    </div>
</div>a c