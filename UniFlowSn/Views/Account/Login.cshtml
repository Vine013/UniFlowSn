@model UniFlowSn.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-uniflow text-center p-4">
                    <h3 class="text-white"><i class="bi bi-person-circle me-2"></i> Login</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Senha" />
                            <label asp-for="Password" class="form-label"><i class="bi bi-key-fill me-2"></i> Senha</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-controller="Account" asp-action="RecoveryPassword">Esqueceu sua senha?</a>
                            <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-box-arrow-in-right me-2"></i> Acessar</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-controller="Account" asp-action="Register">Não possui uma conta? Cadastre-se!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>