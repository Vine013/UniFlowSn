@model List<UniFlowSn.Models.Db.Event>

@{
    ViewData["Title"] = "Meus Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 10rem">
    <div class="col-md-10 offset-md-1">
        <h2 class="mb-4">Meus Eventos Inscritos</h2>
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive bg-white shadow-sm rounded">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Título</th>
                            <th>Data de Início</th>
                            <th>Local</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evento in Model)
                        {
                            <tr>
                                <td>@evento.Title</td>
                                <td>@evento.DtStart?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@evento.Place?.Place</td>
                                <td class="text-center">
                                    <a href="/User/InscriptionDetails/@evento.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye-fill me-1"></i> Ver Detalhes
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                Você ainda não se inscreveu em nenhum evento. <a href="/Events" class="alert-link">Explore os eventos!</a>
            </div>
        }
    </div>
</div>