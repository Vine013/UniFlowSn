@model UniFlowSn.Models.ViewModels.InscriptionViewModel

@{
    ViewData["Title"] = "Inscrição no Evento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-center p-4" style="background-color: #0FC2C0 !important;">
                    <h3 class="text-white"><i class="bi bi-bookmark-plus-fill me-2"></i> Inscreva-se no Evento</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ConfirmInscription">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="EventId" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3 form-floating">
                            <input asp-for="Name" class="form-control" placeholder="Nome Completo" required />
                            <label asp-for="Name" class="form-label"><i class="bi bi-person-fill me-2"></i> Nome Completo</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" required />
                            <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Phone" class="form-control" placeholder="Telefone" />
                            <label asp-for="Phone" class="form-label"><i class="bi bi-telephone-fill me-2"></i> Telefone</label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Endereço" />
                            <label asp-for="Address" class="form-label"><i class="bi bi-house-fill me-2"></i> Endereço</label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" style="background-color: #0FC2C0 !important; border-color: #0FC2C0 !important;">
                                <i class="bi bi-check-circle-fill me-2"></i> Confirmar Inscrição
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-controller="Events" asp-action="EventDetails" asp-route-id="@Model?.EventId">Voltar para os Detalhes do Evento</a></div>
                </div>
            </div>
        </div>
    </div>
</div>